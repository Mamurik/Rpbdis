@model RadiostationWeb.Models.Record
@{
    ViewData["Title"] = "Delete Record";
}

<h2>Delete Record</h2>

<div>
    <h4>Are you sure you want to delete this record?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Artist
        </dt>
        <dd class="col-sm-10">
            @Model.Artist.Name
        </dd>
        <dt class="col-sm-2">
            Album
        </dt>
        <dd class="col-sm-10">
            @Model.Album
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre.Name
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RecordId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
