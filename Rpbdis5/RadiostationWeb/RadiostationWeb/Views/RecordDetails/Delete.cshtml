@model RadiostationWeb.Models.RecordDetail

<h2>Delete Record Detail</h2>


<div>
    <h4>Are you sure you want to delete this record?</h4>
    <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.RecordDetailId</dd>

            <dt class="col-sm-2">Record</dt>
            <dd class="col-sm-10">@Model.Record.Title</dd>

            <dt class="col-sm-2">Recording Date</dt>
            <dd class="col-sm-10">@Model.RecordingDate</dd>

            <dt class="col-sm-2">Duration</dt>
            <dd class="col-sm-10">@Model.Duration</dd>

            <dt class="col-sm-2">Rating</dt>
            <dd class="col-sm-10">@Model.Rating</dd>
        </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RecordId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
