@model RadiostationWeb.Models.Artist
@{
    ViewData["Title"] = "Delete Artist";
}

<h2>Delete Artist</h2>

<div>
    <h4>Are you sure you want to delete this artist?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Members</dt>
        <dd class="col-sm-10">@Model.Members</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ArtistId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
