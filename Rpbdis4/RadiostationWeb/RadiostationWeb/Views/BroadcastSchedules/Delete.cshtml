@model RadiostationWeb.Models.BroadcastSchedule
@{
    ViewData["Title"] = "Delete Broadcast Schedule";
}

<h2>Delete Broadcast Schedule</h2>

<div>
    <h4>Are you sure you want to delete this record?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee
        </dt>
        <dd class="col-sm-10">
            @Model.Employee.FullName
        </dd>
        <dt class="col-sm-2">
            Record
        </dt>
        <dd class="col-sm-10">
            @Model.Record.Title
        </dd>
        <dt class="col-sm-2">
            Schedule Time
        </dt>
        <dd class="col-sm-10">
            @Model.BroadcastDate.ToString("f") // Форматируем дату и время
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ScheduleId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
